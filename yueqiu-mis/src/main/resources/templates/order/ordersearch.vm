<!DOCTYPE html>
<html>
<head>
#parse("/head.vm")
<title>订单查询</title>
</head>
<body>
    #parse("/navbar.vm")

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                #parse("/menu.vm")
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h2 class="page-header">订单查询</h2>
                <form class="form-inline" action="/orders">
                    <div class="form-group">
                        <input type="text" class="form-control" id="id" name="id" placeholder="订单号">
                    </div>
                    <button type="submit" class="btn btn-default">查询</button>
                </form>
                #if ($order)
                <br>
                <table class="table">
                    <tr>
                        <td colspan="2">
                            <img width="60" height="60" alt="$!user.nickname" src="$!user.avatar">
                        </td>
                    </tr>
                    <tr>
                        <td>昵称：$!user.nickname</td>
                        <td>手机号：$!user.mobile</td>
                    <tr>
                    <tr>
                        <td colspan="2">注册IP：$!user.ip</td>
                    </tr>
                </table>
                <hr>
                #end
            </div>
        </div>
    </div>

    #parse("/footer.vm")
</body>
</html>