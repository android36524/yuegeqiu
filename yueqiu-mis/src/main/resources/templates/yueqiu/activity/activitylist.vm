<!DOCTYPE html>
<html>
<head>
#parse("/head.vm")
<title>活动管理</title>
</head>
<body>
    #parse("/navbar.vm")

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                #parse("/$project/menu.vm")
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h2 class="page-header">活动列表</h2>
                <div class="row">
                    <a class="btn btn-primary" style="margin: 0 0 15px 15px;" href="/$project/activities/0">添加活动</a>
                </div>
                <div class="row">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>标题</th>
                                <th>球场</th>
                                <th>时间</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                        #foreach($activity in $activities)
                            <tr>
                                <td>$activity.title</td>
                                <td>$activity.stadium.name</td>
                                <td>$activity.date</td>
                                <td>$activity.status</td>
                                <td>
                                    <a href="/yueqiu/activities/$activity.id">详情</a>&nbsp;&nbsp;
                                    <a href="/yueqiu/orders/activity/$activity.id">订单</a>
                                </td>
                            </tr>
                        #end
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <nav>
                        <ul class="pager">
                            #set($p = $offset - 10)
                            #set($n = $offset + 10)
                            <li #if ($offset <= 0)class="disabled" #end><a href="/yueqiu/activities?offset=$p">前一页</a></li>
                            <li><a href="/yueqiu/activities?offset=$n">后一页</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    #parse("/footer.vm")
</body>
</html>