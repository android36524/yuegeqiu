<!DOCTYPE html>
<html>
<head>
#parse("/head.vm")
<title>球场管理</title>
</head>
<body>
    #parse("/navbar.vm")

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                #parse("/menu.vm")
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h2 class="page-header">球场列表</h2>
                <div class="row">
                    <a class="btn btn-primary" style="margin: 0 0 15px 15px;" href="/stadiums/0">添加球场</a>
                </div>
                <div class="row">
                    #foreach($stadium in $stadiums)
                    <div class="col-sm-4 col-md-3">
                        <div class="thumbnail">
                            <a href="/stadiums/$stadium.id" title="点击查看球场详情">
                            <img src="$stadium.gallery[0]" alt="$stadium.name">
                            </a>
                            <div class="caption">
                                <h4>$stadium.name</h4>
                            </div>
                        </div>
                    </div>
                    #end
                </div>
            </div>
        </div>
    </div>

    #parse("/footer.vm")
</body>
</html>